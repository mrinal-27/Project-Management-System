datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  Admin
  Manager
  User
}

model User {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  role      String
  password  String

  birthday  DateTime?
  gender    String?
  phone     String?
  bio       String?

  tasks     Task[]
  projects  Project[] @relation("ManagerProjects")
  salary    Salary?
}


model Project {
  id          Int       @id @default(autoincrement())
  name        String
  description String?

  // Manager of project
  manager     User      @relation("ManagerProjects", fields: [managerId], references: [id])
  managerId   Int

  // Project tasks
  tasks       Task[]
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  status      String   @default("Pending")

  // Assigned user
  user        User     @relation(fields: [userId], references: [id])
  userId      Int

  // Task belongs to project
  project     Project  @relation(fields: [projectId], references: [id])
  projectId   Int
  deadline    DateTime?
  priority    String   @default("Medium")

}

model Salary {
  id        Int    @id @default(autoincrement())
  amount    Int

  user      User   @relation(fields: [userId], references: [id])
  userId    Int    @unique
}
